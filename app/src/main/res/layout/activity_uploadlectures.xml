<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadlectures">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:padding="0dp"
        android:src="@drawable/storage1"/>

    <Button
        android:id="@+id/btnselectfile"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginTop="389dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/roundedbutton"
        android:text="select file"
        android:textColor="#ffffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewnotification"
        android:layout_width="173dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="308dp"
        android:text="no file is selected..."
        android:textAlignment="center"
        android:textColor="@color/colorblue"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnuploadfile"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewnotification"
        android:layout_alignLeft="@+id/textViewnotification"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-16dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="459dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:background="@drawable/roundedbutton"
        android:text="upload file"
        android:textColor="#ffffffff"
        android:textSize="22sp" />
</RelativeLayout>