<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".studentProfileActivity">

    <RelativeLayout
        android:id="@+id/rellay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="20dp"
        android:background="@drawable/grad">

        <RelativeLayout
            android:id="@+id/imguser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_border">

            <ImageView
                android:id="@+id/profimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle"
                android:layout_margin="9dp"
                android:padding="3dp"
                android:src="@drawable/smartclassroom3"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"/>


        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imguser"
            android:layout_centerHorizontal="true"
            android:text="Student profile"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:layout_margin="15sp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_below="@id/rellay">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/nameprofile"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_person_black_24dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/nameprofile"
        android:focusable="true"
        android:id="@+id/profnames"
        android:focusableInTouchMode="true"
        android:hint="Enter Your Name"
        android:textColorHint="@color/colorblue" />

</RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mobileprofile"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_phone_android_black_24dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mobileprofile"
                android:textColorHint="@color/colorblue"
                android:focusable="true"
                android:id="@+id/profmobile"
                android:focusableInTouchMode="true"
                android:hint="Enter Your Mobile Number"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/emailprofile"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_contact_mail_black_24dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/emailprofile"
                android:textColorHint="@color/colorblue"
                android:focusable="true"
                android:id="@+id/profemail"
                android:focusableInTouchMode="true"
                android:hint="enter your Email"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/addressprofile"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_location_city_black_24dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/addressprofile"
                android:textColorHint="@color/colorblue"
                android:focusable="true"
                android:id="@+id/profaddress"
                android:focusableInTouchMode="true"
                android:hint="Enter Your Address"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/dobprofile"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_date_range_black_24dp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dobprofile"
                android:textColorHint="@color/colorblue"
                android:focusable="true"
                android:id="@+id/profdob"
                android:focusableInTouchMode="true"
                android:hint="Enter Your Date Of Birth"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/semesterprofile"
                android:layout_alignParentLeft="true"
                android:src="@drawable/semester"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/semesterprofile"
                android:textColorHint="@color/colorblue"
                android:focusable="true"
                android:id="@+id/profsemester"
                android:focusableInTouchMode="true"
                android:hint="Enter Your Current Semester"/>

        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="19dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/profCONFIRM"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundedbutton"
        android:text="CONFIRM"
        android:textColor="#ffffffff"
        android:onClick="confirmprofile"
        android:textSize="18sp" />

    <Button
        android:id="@+id/back"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Back"
        android:textColor="#ffffffff"
        android:textSize="18sp" />
</LinearLayout>

    </LinearLayout>


</RelativeLayout>