<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".managestudents">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage students"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorblue"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Students"
        android:id="@+id/btnaddstudents"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete students"
        android:textSize="22sp"
        android:id="@+id/btndeletestudents"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update students"
        android:textSize="22sp"
        android:id="@+id/btnupdatestudents"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="0dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/students"
        />
</androidx.appcompat.widget.LinearLayoutCompat>