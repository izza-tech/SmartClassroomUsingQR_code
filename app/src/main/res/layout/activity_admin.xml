<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".admin">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin_Portal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorblue"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Students"
        android:id="@+id/btnmanagestudents"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Timetable"
        android:textSize="22sp"
        android:id="@+id/btntimetable"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Faculty"
        android:textSize="22sp"
        android:id="@+id/btnmanagefaculty"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registered Students"
        android:textSize="22sp"
        android:id="@+id/btnregisteredrstudents"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Logins"
        android:textSize="22sp"
        android:id="@+id/btngeneratelogins"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="22sp"
        android:id="@+id/btnadminlogout"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"

        />
</androidx.appcompat.widget.LinearLayoutCompat>