<?xml version="1.0" encoding="UTF-8"?>

    <androidx.appcompat.widget.LinearLayoutCompat tools:context=".admin"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/colorblue"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Teachers_Portal"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="generate qr_code"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="35dp"
        android:id="@+id/btngenerateqrcode"/>
    <Button
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textColor="#ffffffff"
    android:textSize="22sp"
    android:text="fetch attendance"
    android:background="@drawable/roundedbutton"
    android:layout_marginTop="35dp"
    android:id="@+id/btngenerateattendence"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="create quiz"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="25dp"
        android:id="@+id/btncreatequiz"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="view details"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="25dp"
        android:id="@+id/btnviewdetails"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="upload lectures"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="25dp"
        android:id="@+id/btnuploadlectures"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="upload Assignments"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="25dp"
        android:id="@+id/btnUploadAssignments"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="Reply Queries"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="25dp"
        android:id="@+id/btnreplyqueries"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="Logout"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="25dp"
        android:id="@+id/btnteacherslogout"/>

</androidx.appcompat.widget.LinearLayoutCompat>