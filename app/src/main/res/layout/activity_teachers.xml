<?xml version="1.0" encoding="UTF-8"?>

    <androidx.appcompat.widget.LinearLayoutCompat tools:context=".admin"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/colorblue"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Teachers_Portal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="generate qr_code"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="15dp"
        android:id="@+id/btngenerateqrcode"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="view timetable"
        android:id="@+id/btnTimeTable"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textColor="#ffffffff"
    android:textSize="22sp"
    android:text="fetch attendance"
    android:background="@drawable/roundedbutton"
    android:layout_marginTop="15dp"
    android:id="@+id/btngenerateattendence"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="Quiz Section"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="15dp"
        android:id="@+id/btncreatequiz"/>

<!--    <Button-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_width="match_parent"-->
<!--        android:textColor="#ffffffff"-->
<!--        android:textSize="22sp"-->
<!--        android:text="Quiz Result"-->
<!--        android:background="@drawable/roundedbutton"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:id="@+id/btnquizresult"/>-->

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="view details"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="15dp"
        android:id="@+id/btnviewdetails"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="upload lectures"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="15dp"
        android:id="@+id/btnuploadlectures"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="upload Assignments"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="15dp"
        android:id="@+id/btnUploadAssignments"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="Reply Queries"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="15dp"
        android:id="@+id/btnreplyqueries"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:text="Logout"
        android:background="@drawable/roundedbutton"
        android:layout_marginTop="15dp"
        android:id="@+id/btnteacherslogout"/>
    </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>