<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="30dp"

    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TeacherGeneratQuiz">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/colorblue"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Test_Result_Portal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:text="Generate Subject Quiz"
                android:background="@drawable/roundedbutton"
                android:layout_marginTop="15dp"
                android:id="@+id/btncreatequiz"/>



            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:text="Generate Mcq's"
                android:background="@drawable/roundedbutton"
                android:layout_marginTop="40dp"
                android:id="@+id/btngeneratemcq"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:text="Quiz Result"
                android:background="@drawable/roundedbutton"
                android:layout_marginTop="40dp"
                android:id="@+id/btnquizresult"/>


        </LinearLayout>

</LinearLayout>