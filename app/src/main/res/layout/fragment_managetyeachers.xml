<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/manageteachersfragment"
    android:padding="20dp"
    tools:context=".ManagetyeachersFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Teachers"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorblue"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add TEACHERS"
        android:id="@+id/btnaddteachers"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View TEACHERS"
        android:id="@+id/btnviewteachers"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Teachers"
        android:textSize="22sp"
        android:id="@+id/btndeleteteachers"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:id="@+id/btnupdateteachers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        android:text="Update Teachers"
        android:textColor="#ffffffff"
        android:textSize="22sp"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="0dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/teachers"
        />

</LinearLayout>