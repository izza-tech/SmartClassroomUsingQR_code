<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".students">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Students_Portal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/colorblue"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scan qr_code"
        android:id="@+id/btnscanqrcode"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scan QR_quiz"
        android:id="@+id/btnscanforquiz"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perform MCQ's"
        android:id="@+id/btnformmcq"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="35dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="view attendence history"
        android:textSize="22sp"
        android:id="@+id/btnviewattendencehistory"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="view profile"
        android:textSize="22sp"
        android:id="@+id/btnviewprofiles"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload issues"
        android:textSize="22sp"
        android:id="@+id/btnuploadissuesstudents"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="access lectures"
        android:textSize="22sp"
        android:id="@+id/btnaccesslectures"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="22sp"
        android:id="@+id/btnstudentlogout"
        android:textColor="#ffffffff"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundedbutton"

        />
</androidx.appcompat.widget.LinearLayoutCompat>