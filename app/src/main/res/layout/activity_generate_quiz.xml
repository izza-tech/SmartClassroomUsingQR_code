<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GenerateQuiz">

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:layout_gravity="center"
                android:text="Create Quiz"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                />
            <EditText
                android:layout_margin="10dp"
                android:id="@+id/et_dateQuiz"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:hint="Select__Date"
                android:textColorHint="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText

                android:id="@+id/edittextques1"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textColorHint="@color/address"
                android:hint="Question 1" />
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/edittextmarks1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:textColorHint="@color/address"
                android:inputType="textMultiLine"
                android:hint="marks" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText

                android:id="@+id/edittextques2"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/address"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="Question 2" />
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/edittextmarks2"
                android:layout_width="65dp"
                android:textColorHint="@color/address"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="marks" />
        </LinearLayout>



        <LinearLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText

                android:id="@+id/edittextques3"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/address"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="Question 3" />
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/edittextmarks3"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/address"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="marks" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText

                android:id="@+id/edittextques4"
                android:layout_width="260dp"
                android:textColorHint="@color/address"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="Question 4" />
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/edittextmarks4"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/address"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="marks" />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/edittextques5"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/address"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Question 5"
                android:inputType="textMultiLine" />

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/edittextmarks5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/address"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="marks" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="create qr_code"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:background="@drawable/roundedbutton"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:id="@+id/createquizbutton"
                />
            <Button
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:textColor="#ffffff"
                android:text="save to gallery"
                android:layout_below="@+id/edittext"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:id="@+id/btnquizsavetogallery"
                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/qrcodequiz"
            android:layout_width="300dp"
            android:background="@drawable/edittextborder"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>

</ScrollView>